<%  if (results != undefined) { %>
    <ol>
  <%  for(var i=0; i<results.length; i++) { %>
	<li>
		<div class="actions">
			<a href="#" onclick="citation.add({
				url: '<%= results[i].link %>',
				displayLink: '<%= results[i].displayLink %>',
				title: '<%= results[i].title.replace(/\'/g, "&rsquo;") %>',
				text: '<%= results[i].snippet.replace(/\'/g, "&rsquo;") %>'
			});" class="btn addCitation preventDefault" title="Add to Citation">Add to Citation</a>&nbsp;
			<a href="<%= results[i].link %>" target="_blank" class="btn" title="Visit full article">Visit Full Article</a>
		</div>
	    <div class="row">
		<div class="span6">
		    <p><%= results[i].htmlSnippet.replace(/\u003cbr\u003e/g, '') %></p>
		</div>
		<div class="span3">
		    <ul>
			<li><em>title</em> <%= results[i].htmlTitle %></li>
			<li><em>link</em> <a href="<%= results[i].link %>"><%= results[i].displayLink %></a></li>
		    </ul>
	    </div>
        </li>
  <%  } %>
    </ol>
<%  } else { %>
    <p style="text-align: center">No results found!</p>
<%}%>
